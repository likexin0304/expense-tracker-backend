{
  "version": 2,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/server.js"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate, max-age=0"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        },
        {
          "key": "X-Cache-Version",
          "value": "1.0.3-fixed-routing"
        }
      ]
    }
  ],
  "functions": {
    "server.js": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "NODE_ENV": "production",
    "FORCE_DEPLOY": "2025-06-20-13:30",
    "FORCE_CACHE_CLEAR": "true",
    "DEPLOYMENT_VERSION": "1.0.3",
    "DEPLOY_TRIGGER": "routing-fix"
  }
} 